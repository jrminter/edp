\definecolor{ltyellow}{rgb}{1.0, 0.9717647, 0.9} 
\definecolor{ekred}{HTML}{ED0000}      % EK dress red
\definecolor{gray20}{cmyk}{0,0,0,0.20} % 20% gray
\definecolor{gray40}{cmyk}{0,0,0,0.40} % 40% gray
\definecolor{gray80}{cmyk}{0,0,0,0.80} % 80% gray

\definecolor{p8402}{HTML}{6F6A63}      % Pantone 8402


% headline colors and fonts
\setbeamercolor{headline}{fg=ekred,bg=ekyellow}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=lightgray}
\setbeamercolor{institute in headline}{fg=lightgray}
\setbeamercolor{logo in headline}{fg=black,bg=lightgray}
\setbeamercolor{separation line}{bg=ltyellow}

% footline colors and fonts
\setbeamercolor{footline}{fg=gray80,bg=ekyellow}
\setbeamerfont{footline}{fg=gray80, size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=ltyellow}
\setbeamerfont{normal text}{size=\normalsize}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamerfont{block body}{size=\normalsize}
\setbeamercolor*{block title}{fg=black,bg=gray20}
\setbeamerfont{block title}{size=\LARGE, series=\bf}


% example environment
\setbeamercolor*{example title}
  {fg=ekred, bg=ltyellow}
\setbeamerfont{example title}
  {size=\normalsize, series=\bf, bg=ltyellow, fg=black}
\setbeamercolor*{example body}
  {fg=black, bg=gray}
\setbeamerfont{example body}
  {size=\normalsize }
